<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #000;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.Login">
    <children>
        <Label layoutX="100.0" layoutY="100.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Email:" textFill="WHITE" />
        <Label layoutX="100.0" layoutY="160.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Password:" textFill="WHITE" />

        <TextField fx:id="emailTxt" layoutX="200.0" layoutY="96.0" prefWidth="300.0" style="-fx-background-color: #222; -fx-text-fill: white; -fx-border-color: #00dac6; -fx-border-radius: 5; -fx-padding: 5;" />
        <PasswordField fx:id="passwordTxt" layoutX="200.0" layoutY="156.0" prefWidth="300.0" style="-fx-background-color: #222; -fx-text-fill: white; -fx-border-color: #00dac6; -fx-border-radius: 5; -fx-padding: 5;" />

        <Button fx:id="loginBtn" layoutX="96.0" layoutY="220.0" onAction="#loginController" prefHeight="40.0" prefWidth="404.0" style="-fx-background-color: #00dac6; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 8; -fx-background-radius: 8;" text="Login" />
        <Button fx:id="registerBtn" layoutX="96.0" layoutY="280.0" onAction="#registerController" prefHeight="40.0" prefWidth="404.0" style="-fx-background-color: #00dac6; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 8; -fx-background-radius: 8;" text="Register" />

        <Label fx:id="errorLabel" layoutX="200.0" layoutY="190.0" prefHeight="20.0" prefWidth="300.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" textFill="#c44018" visible="false" />

        <Label layoutX="208.0" layoutY="22.0" prefHeight="54.0" prefWidth="184.0" text="EXPENSIO" textFill="#00dac6">
            <font>
                <Font name="System Italic" size="36.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
